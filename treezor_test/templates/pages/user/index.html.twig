{% extends 'base.html.twig' %}

{% block title %}My users
{% endblock %}

{% block body %}

	<div class="container">
		{% if not users is same as ([]) %}
			<h1 class="mt-2">My users</h1>
			<div class="count mt-4 mb-2">There is
				{{users.getTotalItemCount}}
				user(s) in total</div>
			<table class="table table-hover">
				<thead>
					<tr class="table-primary">
						<th scope="col">First name</th>
						<th scope="col">Last name</th>
						<th scope="col">Email</th>
						<th scope="col">Birthday date</th>
						<th scope="col">Is active</th>
					</tr>
				</thead>
				<tbody>
					{% for user in users %}
						<tr>
							<td>{{ user.firstName }}</td>
							<td>{{ user.lastName }}</td>
							<td>{{ user.email }}</td>
							<td>{{ user.birthdayDate|date('d-m-Y') }}</td>
							<td>{{ user.active }}</td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
			<div class="navigation d-flex justify-content-center">
				{{ knp_pagination_render(users) }}
			</div>
		{% else %}
			<h1 class="mt-2">There is no users.</h1>
		{% endif %}
	</div>

{% endblock %}
